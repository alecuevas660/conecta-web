---
import { Image } from 'astro:assets';
import banner1 from '../assets/img/Banner1.jpg';
import banner2 from '../assets/img/Banner2.jpg';
import banner3 from '../assets/img/Banner3.jpg';

const banners = [
  {
    image: banner1,
    alt: "Conecta Internacional",
    title: "¡Bienvenido a Conecta Internacional!",
    description: "En un mundo cada vez más interconectado, el comercio exterior es una oportunidad emocionante para empresas de todos los tamaños.",
    buttonText: "Contáctanos",
    buttonLink: "/contact"
  },
  {
    image: banner2,
    alt: "Soluciones en Comercio Exterior",
    title: "Soluciones en Comercio Exterior",
    description: "Búsqueda de proveedores, transportes y asesoría integral en procesos de internación.",
    buttonText: "Nuestros Servicios",
    buttonLink: "/services"
  },
  {
    image: banner3,
    alt: "Externaliza tu Comercio Exterior",
    title: "Externaliza tu Comercio Exterior",
    description: "Te ayudamos a gestionar eficientemente tus operaciones internacionales.",
    buttonText: "Conoce Más",
    buttonLink: "/about"
  }
];
---

<div id="homeBanner" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        {banners.map((banner, index) => (
            <div class={`carousel-item ${index === 0 ? "active" : ""}`}>
                <div class="banner-slide">
                    <Image src={banner.image || "/placeholder.svg"} alt={banner.alt} class="banner-image" width={1920} height={1100} quality={90} />
                    <div class="overlay"></div>
                    <div class="container position-relative">
                        <div class="row align-items-center min-vh-75">
                            <div class="col-lg-8 col-md-10 text-white">
                                <h2 class="display-4 fw-bold mb-3">{banner.title}</h2>
                                <p class="lead mb-4">{banner.description}</p>
                                <a href={banner.buttonLink} class="btn btn-primary btn-lg">{banner.buttonText}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        ))}
    </div>
    
    <button class="carousel-control-prev" type="button" data-bs-target="#homeBanner" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#homeBanner" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>
</div>

<style>
    .min-vh-75 {
        min-height: 75vh;
    }

    .banner-slide {
        position: relative;
        overflow: hidden;
        height: 85vh; /* Aumentado de 60vh a 75vh */
    }

    .banner-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.4));
    }

    .carousel-item h2 {
        font-size: 2.5rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }

    .carousel-item .lead {
        font-size: 1.2rem;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
    }

    .btn-primary {
        background-color: #0056b3;
        border-color: #0056b3;
        padding: 0.8rem 2rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #004494;
        border-color: #004494;
        transform: translateY(-2px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 5%;
        opacity: 0.7;
    }

    .carousel-control-prev {
        left: 30px;
    }

    .carousel-control-next {
        right: 30px;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        width: 40px;
        height: 40px;
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
        background-size: 50%;
    }

    @media (max-width: 768px) {
        .banner-slide {
            height: 60vh; /* Ajustado para dispositivos móviles */
        }

        .carousel-item h2 {
            font-size: 2rem;
        }

        .carousel-item .lead {
            font-size: 1rem;
        }

        .btn-primary {
            padding: 0.6rem 1.5rem;
        }

        .carousel-control-prev,
        .carousel-control-next {
            bottom: 20px;
            top: auto;
            transform: none;
        }

        .carousel-control-prev {
            left: auto;
            right: 70px;
        }

        .carousel-control-next {
            right: 20px;
        }
    }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const carousel = document.getElementById('homeBanner');
    if (carousel) {
      new window.bootstrap.Carousel(carousel, {
        interval: 3000,
        pause: false
      });
    }
  });
</script>