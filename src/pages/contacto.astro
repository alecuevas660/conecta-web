---
import Layout from '../layouts/Layout.astro';
import Contacto from '../components/Contacto.astro';

const title = "Contacto - Conecta Internacional";
---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="bg-light py-5 text-center">
    <div class="container">
      <h1 class="display-4 fw-bold mb-4">Contáctanos</h1>
      <p class="lead">Estamos aquí para ayudarte. ¡Conéctate con nosotros!</p>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="py-5">
    <div class="container">
      <div class="row g-4">
        <div class="col-md-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
              <i class="bi bi-clock fs-1 text-primary mb-3"></i>
              <h3 class="card-title h5 fw-bold">Horario Atención</h3>
              <p class="card-text">9:00AM - 18-00PM</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
              <i class="bi bi-telephone fs-1 text-primary mb-3"></i>
              <h3 class="card-title h5 fw-bold">Teléfono</h3>
              <p class="card-text">+1 234 567 890</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
              <i class="bi bi-envelope fs-1 text-primary mb-3"></i>
              <h3 class="card-title h5 fw-bold">Email</h3>
              <p class="card-text">info@conectainternacional.com</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  

  <!-- Contact Form Section -->
  <Contacto />
</Layout>
