---
import Proveedores from '../assets/img/busqueda-proveedores.jpg';
import Transporte from '../assets/img/busqueda-transporte.jpg';
import Internacion from '../assets/img/busqueda-asesor.jpg';
import Externalizacion from '../assets/img/busqueda-externalizacion.jpg';
import HeroBackground from '../assets/img/hero-background.jpg'; // Importa la imagen de fondo
import Layout from '../layouts/Layout.astro';

interface Props {
  title?: string;
}

const { title = "Servicios - Conecta Internacional" } = Astro.props;
---
<Layout title={title}> 
  <body>
    <main>
      <!-- Hero Section: Página de Servicios -->
      <section class="intro-section py-5 bg-light text-white d-flex align-items-center justify-content-center" style="min-height: 70vh;">
        <div class="container text-center position-relative z-2">
          <h1 class="display-4 fw-bold mb-4">Impulsa tu negocio con nuestros servicios especializados</h1>
          <p class="lead mb-5">En Conecta Internacional, ofrecemos soluciones adaptadas para mejorar la eficiencia de tu empresa a través de nuestros servicios profesionales.</p>
          <a href="#services" class="btn btn-primary btn-lg">Explora Nuestros Servicios</a>
        </div>
      </section>
      
      <!-- Servicios con imágenes intercaladas -->
      <section id="services" class="services-section py-5 mt-4">
        <div class="container">
          <h2 class="text-center fw-bold mb-5">Nuestros Servicios</h2>
          <div class="row g-4">
            <!-- Servicio 1: Búsqueda de Proveedores -->
            <div class="col-md-6 col-lg-6 animate-on-scroll">
              <div class="card service-card h-100 shadow-lg rounded-4">
                <img src={Proveedores.src} class="card-img-top service-image" alt="Búsqueda de Proveedores" />
                <div class="card-body text-center">
                  <i class="bi bi-search text-primary fs-2"></i>
                  <h3 class="fs-5 fw-bold mb-3">Búsqueda de Proveedores</h3>
                  <p class="text-muted">Localizamos a los proveedores más adecuados para tu empresa.</p>
                  <a href="#" class="btn btn-outline-primary">Leer más</a>
                </div>
              </div>
            </div>

            <!-- Servicio 2: Búsqueda de Transportes -->
            <div class="col-md-6 col-lg-6 animate-on-scroll">
              <div class="card service-card h-100 shadow-lg rounded-4">
                <img src={Transporte.src} class="card-img-top service-image" alt="Búsqueda de Transportes" />
                <div class="card-body text-center">
                  <i class="bi bi-truck text-primary fs-2"></i>
                  <h3 class="fs-5 fw-bold mb-3">Búsqueda de Transportes</h3>
                  <p class="text-muted">Ofrecemos soluciones logísticas eficientes para tu negocio.</p>
                  <a href="#" class="btn btn-outline-primary">Leer más</a>
                </div>
              </div>
            </div>

            <!-- Servicio 3: Asesoría en Internación -->
            <div class="col-md-6 col-lg-6 animate-on-scroll">
              <div class="card service-card h-100 shadow-lg rounded-4">
                <img src={Internacion.src} class="card-img-top service-image" alt="Asesoría en Internación" />
                <div class="card-body text-center">
                  <i class="bi bi-globe text-primary fs-2"></i>
                  <h3 class="fs-5 fw-bold mb-3">Asesoría en Internación</h3>
                  <p class="text-muted">Te ayudamos en la importación y exportación de tus productos.</p>
                  <a href="#" class="btn btn-outline-primary">Leer más</a>
                </div>
              </div>
            </div>

            <!-- Servicio 4: Externalización -->
            <div class="col-md-6 col-lg-6 animate-on-scroll">
              <div class="card service-card h-100 shadow-lg rounded-4">
                <img src={Externalizacion.src} class="card-img-top service-image" alt="Externalización" />
                <div class="card-body text-center">
                  <i class="bi bi-people text-primary fs-2"></i>
                  <h3 class="fs-5 fw-bold mb-3">Externalización</h3>
                  <p class="text-muted">Externaliza tus procesos clave para mejorar la eficiencia.</p>
                  <a href="#" class="btn btn-outline-primary">Leer más</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para la animación de scroll -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const serviceCards = document.querySelectorAll('.animate-on-scroll');

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
              observer.unobserve(entry.target); // Deja de observar el elemento una vez que es visible
            }
          });
        }, {
          threshold: 0.1 // Ajusta este valor para que la animación se active cuando el elemento esté parcialmente visible
        });

        serviceCards.forEach(card => {
          observer.observe(card);
        });
      });
    </script>
  </body>
</Layout>

<style>
 .intro-section {
  background-image: url('../assets/img/hero-background.jpg'); /* Ruta de la imagen de fondo */
  background-size: cover;
  background-position: center center; /* Cambia la posición a centro */
  background-repeat: no-repeat;
  position: relative;
}

.intro-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5); /* Overlay oscuro para mejorar la legibilidad */
  z-index: 1;
}

.intro-section .container {
  position: relative;
  z-index: 2;
}

.intro-section h1 {
  font-size: 2.5rem; /* Tamaño de fuente para pantallas grandes */
}

.intro-section p {
  font-size: 1.2rem; /* Tamaño de fuente para pantallas grandes */
}

.intro-section .btn {
  padding: 0.75rem 2rem; /* Aumentamos el tamaño del botón */
}

@media (max-width: 768px) {
  .intro-section h1 {
    font-size: 1.8rem; /* Tamaño de fuente reducido para pantallas pequeñas */
  }

  .intro-section p {
    font-size: 1rem; /* Tamaño de fuente reducido para pantallas pequeñas */
  }

  .intro-section .btn {
    padding: 0.5rem 1.5rem; /* Botón más pequeño para pantallas pequeñas */
  }
}

@media (max-width: 576px) {
  .intro-section {
    min-height: 50vh; /* Reduce la altura en móviles */
    background-size: cover; /* Asegura que el fondo cubra todo el contenedor */
    background-position: center; /* Centra la imagen de fondo */
  }
  .intro-section h1 {
    font-size: 2rem; /* Reduce el tamaño del título */
  }
  .intro-section p {
    font-size: 1rem; /* Reduce el tamaño del párrafo */
  }
  .intro-section .btn {
    font-size: 0.9rem; /* Ajusta el tamaño de la letra del botón */
    padding: 0.5rem 1rem; /* Ajusta el espacio interno del botón */
  }
}

  .service-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }
  .service-image {
    height: 250px;
    object-fit: cover;
  }

  /* Animaciones para los elementos de la sección de servicios */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .animate-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>