    <!-- Benefits Section -->
    <section class="section-padding bg-light animate">
        <div class="container">
            <h2 class="text-center fw-bold mb-5">Beneficios del Servicio</h2>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="benefit-item">
                        <h4 class="fw-bold mb-3">
                            <i class="bi bi-speedometer2 text-primary me-2"></i>
                            Mayor Eficiencia
                        </h4>
                        <p class="text-muted mb-0">Optimiza tus operaciones y reduce tiempos de ejecución.</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="benefit-item">
                        <h4 class="fw-bold mb-3">
                            <i class="bi bi-graph-up text-primary me-2"></i>
                            Reducción de Costos
                        </h4>
                        <p class="text-muted mb-0">Disminuye gastos operativos y mejora la rentabilidad.</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="benefit-item">
                        <h4 class="fw-bold mb-3">
                            <i class="bi bi-shield-check text-primary me-2"></i>
                            Control de Calidad
                        </h4>
                        <p class="text-muted mb-0">Garantiza altos estándares en los procesos externalizados.</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="benefit-item">
                        <h4 class="fw-bold mb-3">
                            <i class="bi bi-globe text-primary me-2"></i>
                            Enfoque Estratégico
