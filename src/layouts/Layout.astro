---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import WhatsappFlotante from '../components/WhatsappFlotante.astro';
interface Props {
	title?: string;
	description?:string;
}

const { title = "Conecta Internacional | Comercio Exterior y Logística Global" } = Astro.props;
const { description = "Conecta Internacional: Soluciones integrales en comercio exterior, logística y asesoría para importaciones y exportaciones. Impulsa tu negocio en el mercado global." } = Astro.props; 
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale"/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description}>

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
		<!-- Bootstrap CSS -->

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
		<!-- Bootstrap Icons -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

	</head>
	<body class="d-flex flex-column min-vh-100">
		<Navbar />
		<main class="flex-grow-1">
			<slot />
		</main>
	<WhatsappFlotante/>
		<Footer />
		<!-- Bootstrap JS Bundle -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

	</body>
</html>

<style>
	body {
		background-color: #f8f9fa;
		font-family: 'Poppins', sans-serif;
	}
</style>
